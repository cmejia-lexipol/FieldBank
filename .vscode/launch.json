{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Lambda (VS Code)",
      "type": "coreclr",
      "request": "launch",
      "program": "${env:USERPROFILE}/.dotnet/tools/dotnet-lambda-test-tool-8.0.exe",
      "args": ["--port", "5050"],
      "cwd": "${workspaceFolder}/src/FieldBank.Functions",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Environment running at http://localhost:([0-9]+)"
      }
    },
    {
      "name": "Debug Lambda (Cursor)",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": ["lambda-test-tool-8.0", "--port", "5050"],
      "cwd": "${workspaceFolder}/src/FieldBank.Functions",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    },
  ]
}
